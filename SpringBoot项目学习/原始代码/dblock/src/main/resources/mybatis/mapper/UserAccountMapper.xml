<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java1234.mapper.UserAccountMapper">

    <resultMap type="UserAccount" id="UserAccountResult">
    </resultMap>

    <update id="addAmount">
        update t_user_account set balance=balance+#{amount} where userId=#{userId}
    </update>


</mapper>